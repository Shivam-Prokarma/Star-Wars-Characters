<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10dp"
    android:elevation="@dimen/dimen_2dp"
    app:cardCornerRadius="@dimen/dimen_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            style="@style/style_text_view_character_details" />

        <TextView
            android:id="@+id/height"
            style="@style/style_text_view_character_details"
            android:layout_below="@id/name" />

        <TextView
            android:id="@+id/mass"
            style="@style/style_text_view_character_details"
            android:layout_below="@id/height" />

        <TextView
            android:id="@+id/hair_color"
            style="@style/style_text_view_character_details"
            android:layout_below="@id/mass" />

        <View
            android:id="@+id/view_center"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/skin_color"
            style="@style/style_text_view_character_details"
            android:layout_toRightOf="@id/view_center" />

        <TextView
            android:id="@+id/eye_color"
            style="@style/style_text_view_character_details"
            android:layout_below="@id/skin_color"
            android:layout_toRightOf="@id/view_center" />

        <TextView
            android:id="@+id/birth_year"
            style="@style/style_text_view_character_details"
            android:layout_below="@id/eye_color"
            android:layout_toRightOf="@id/view_center" />

        <TextView
            android:id="@+id/gender"
            style="@style/style_text_view_character_details"
            android:layout_below="@id/birth_year"
            android:layout_toRightOf="@id/view_center" />

    </RelativeLayout>

</android.support.v7.widget.CardView>