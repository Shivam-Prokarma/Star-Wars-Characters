<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10dp"
    android:elevation="@dimen/dimen_2dp"
    app:cardCornerRadius="@dimen/dimen_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_center"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textview_film_title"
            style="@style/style_text_view_character_details"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textview_film_episode"
            style="@style/style_text_view_character_details"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textview_film_title" />

        <TextView
            android:id="@+id/textview_film_releasedate"
            style="@style/style_text_view_character_details"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textview_film_episode" />

        <TextView
            android:id="@+id/textview_film_director"
            style="@style/style_text_view_character_details"
            android:layout_alignStart="@id/view_center" />

        <TextView
            android:id="@+id/textview_film_producer"
            style="@style/style_text_view_character_details"
            android:layout_alignStart="@id/view_center"
            android:layout_below="@id/textview_film_director" />
    </RelativeLayout>

</android.support.v7.widget.CardView>