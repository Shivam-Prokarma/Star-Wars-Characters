<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.shivam.marvelgallery.ui.CharacterDetailsActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:title="@string/title_activity_character_details"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:elevation="@dimen/dimen_5dp"
                app:cardCornerRadius="@dimen/dimen_2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        style="@style/style_text_view_character_details" />

                    <TextView
                        android:id="@+id/height"
                        style="@style/style_text_view_character_details" />

                    <TextView
                        android:id="@+id/mass"
                        style="@style/style_text_view_character_details" />

                    <TextView
                        android:id="@+id/hair_color"
                        style="@style/style_text_view_character_details" />

                    <TextView
                        android:id="@+id/skin_color"
                        style="@style/style_text_view_character_details" />

                    <TextView
                        android:id="@+id/eye_color"
                        style="@style/style_text_view_character_details" />

                    <TextView
                        android:id="@+id/birth_year"
                        style="@style/style_text_view_character_details" />

                    <TextView
                        android:id="@+id/gender"
                        style="@style/style_text_view_character_details" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>
</layout>